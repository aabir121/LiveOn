<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.buglab.liveon.activity.SelfDiagnosisActivity"
    tools:showIn="@layout/app_bar_self_diagnosis">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/emeregencyContactInputHolder"
        android:layout_margin="10dp"
        android:layout_weight="1"
         android:textColor="@android:color/white"
        android:text="Symptoms Analyzer"
        android:gravity="center"

        android:textSize="20dp"
        android:padding="10dp"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/custom_emergency_contact_holder"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:paddingLeft="55dp"
                android:paddingRight="15dp"

                >
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:id="@+id/c1"
                    android:text="High temperature"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:id="@+id/c2"
                    android:text="Cough"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Sneeze"
                    android:id="@+id/c3"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Nausea"
                    android:id="@+id/c4"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Dizzyness"
                    android:id="@+id/c5"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Loose motion"
                    android:id="@+id/c6"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Lower abdominal pain"
                    android:id="@+id/c7"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Abdominal pain"
                    android:id="@+id/c8"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Heartburn"
                    android:id="@+id/c9"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Temporary weakness"
                    android:id="@+id/c10"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Tiredness"
                    android:id="@+id/c11"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Chest pain"
                    android:id="@+id/c12"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Problem in breathing"
                    android:id="@+id/c13"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Headache"
                    android:id="@+id/c14"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Bleeding"
                    android:id="@+id/c15"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Rash"
                    android:id="@+id/c16"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Rankle"
                    android:id="@+id/c17"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Wincing"
                    android:id="@+id/c18"/>


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Uneasy feeling"
                    android:id="@+id/c19"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Loss of appetite"
                    android:id="@+id/c20"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:buttonTint="@android:color/white"
                    android:text="Anxiety"
                    android:id="@+id/c21"/>






            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
         android:textColor="@android:color/white" android:buttonTint="@android:color/white"
        android:text="Submit"
        android:layout_below="@+id/emeregencyContactInputHolder"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_emergency_button_background"
        android:id="@+id/symptomsSubmitBtn"
        />
</LinearLayout>
